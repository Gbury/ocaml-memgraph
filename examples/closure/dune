(executable
  (name example)
  (modules example)
  (libraries memgraph)
)

(rule
  (target  example.gv)
  (package memgraph)
  (action (with-outputs-to %{target}
           (with-accepted-exit-codes 0
            (run ./example.exe))))
)

(rule
  (target  example.svg)
  (deps    example.gv)
  (package memgraph)
  (mode promote)
  (action (with-outputs-to %{target}
           (with-accepted-exit-codes 0
            (run dot -Tsvg -o %{target} %{deps}))))
)

(alias
  (name   examples)
  (deps   example.svg)
)


